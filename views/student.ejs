<script>
    function toggleSidebar(){
    var sidebar=document.querySelector('.menu-main');
    const menuItems = document.querySelector('.nav-list');

    sidebar.classList.toggle('open');
    menuItems.classList.toggle('open');

    
    
    
  }
</script>
</body>
